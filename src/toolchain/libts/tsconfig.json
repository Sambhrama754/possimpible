{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,

        "declaration": true,
        "declarationMap": true,
        "declarationDir": "../../../dist/dts/libts",
        "rootDir": "src",

        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "../../../dist/toolchain/",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "webworker",
            "scripthost"
        ]
    },
    "include": [
        "../../public/**/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
